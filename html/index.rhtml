<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
	"http://www.w3.org/TR/html4/strict.dtd">
<html lang="ja">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=EUC-JP">
<link rel="stylesheet" href="./css/default.css" type="text/css">
<title><%=h @conf[:title] %></title>
</head>
<body>
<h1><%=h @conf[:title] %></h1>
<% if @error_message %>
<p class="error_message">Error: <%=h @error_message %></p>
<% end %>
<p>
</p>
<form id="form" action="<%=h @cgi.script_name %>" method="POST" enctype="multipart/form-data">
<dl>
<% @forms.each do |form| %>
  <dt><%=h form.label %>
  <dd><%= form.to_html %>
<% if form.note %>
  <dd class="note"><%=h form.note %>
<% end %>
<% end %>
</dl>
<p>
<input type="hidden" name="action" value="save">
<input type="submit">
</p>
</form>
<hr>
<address>
<%=h @conf[:admin_name] %>
<% if @conf[:admin_mail] %>
  <a href="<%=h @conf[:admin_mail] %>"><%=h @conf[:admin_mail] %></a>
<% end %>
</address>
</body>
</html>
